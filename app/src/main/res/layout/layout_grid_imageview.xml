<?xml version="1.0" encoding="utf-8"?>
<!-- Creates the layout of the grid in ProfileActivity -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Calls an Utils class that defines a grid with equal width and height(SquareImageView) -->
    <com.instagramclone.instagramclone.Utils.SquareImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/gridImageView" />

    <!-- Creates Progress Bar to be displayed while images are loading -->
    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:id="@+id/gridImageProgressBar"/>



</RelativeLayout>